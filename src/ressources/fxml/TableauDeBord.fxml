<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<!-- Utilisation de BorderPane pour l'application car simple d'utilisation -->

<BorderPane prefHeight="852.0" prefWidth="393.0" styleClass="rounded-app" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TableauDeBordController">
    <top>
        <!-- Utilisation AnchorPane pour placer les éléments avec précisions -->
        <AnchorPane prefHeight="350.0" prefWidth="394.0" styleClass="anchorPane-connexion-tableau" BorderPane.alignment="CENTER">

            <!-- Utilisation de children pour placer plus facilement les éléments car le conteneur n'a pas de structure claire -->
            <children>

                <!-- Placement de la petite barre d'infos en-haut de l'application avec HBox qui place les éléments à la suite -->
                <HBox alignment="CENTER" prefHeight="44.0" prefWidth="394.0" spacing="3" styleClass="top-container-tableau">

                    <!-- Contenu de HBox -->
                    <children>
                        <Label styleClass="app-time-tableau" text="00:00" /> <!-- l'heure -->
                        <Region HBox.hgrow="ALWAYS" /> <!-- Espace flexible -->

                        <!-- les icônes de statut de l'application-->
                        <ImageView fitHeight="17" fitWidth="17" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/icons8-signal-50 -noir.png" />
                            </image>
                        </ImageView>
                        <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/icons8-wifi-noir30.png" />
                            </image>
                        </ImageView>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/icons8-batterie-noir-50.png" />
                            </image>
                        </ImageView>
                    </children>
                </HBox>

                <!-- Texte central avec StackPane -->
                <StackPane prefHeight="219" prefWidth="394.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="70.0">
               <VBox prefHeight="200.0" prefWidth="100.0">
                  <children>
                     <Pane prefHeight="82.0" prefWidth="200.0">
                        <children>
                           <ImageView fitHeight="82.0" fitWidth="82.0" layoutX="290.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="@../img/Pfp.png" />
                              </image>
                           </ImageView>
                        </children>
                     </Pane>
                          <VBox alignment="CENTER_LEFT">
                        <HBox prefHeight="26.0" prefWidth="394.0">
                           <children>
                                    <Label style="-fx-text-fill: black; -fx-font-size: 32px;" text="Bonjour ">
                                 <padding>
                                    <Insets left="20.0" />
                                 </padding>
                              </Label>
                                    <Label style="-fx-text-fill: black; -fx-font-size: 32px; -fx-font-weight: bold" text="Marin" />
                           </children>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="393.0">
                           <children>
                                    <Label style="-fx-text-fill: black; -fx-font-size: 20px;" text="Vous avez">
                                 <padding>
                                    <Insets left="20.0" />
                                 </padding>
                              </Label>
                                    <Label style="-fx-text-fill: #E60023; -fx-font-size: 20px;" text=" 2 nouvelles notifications" />
                           </children>
                        </HBox>
                              <Region prefHeight="10" />
                              <Region prefHeight="20" />
                          </VBox>
                  </children>
               </VBox>
                </StackPane>
            </children>
        </AnchorPane>
    </top>

    <center>
        <VBox styleClass="form-section">
            <children>


                <!-- Create Account Button -->
                <VBox alignment="CENTER">
                    <Button styleClass="create-button" text="Modifier disponibilités">
                        <VBox.margin>
                            <Insets top="20.0" />
                        </VBox.margin>
                    </Button>
                </VBox>
            <ScrollPane prefHeight="200.0" prefWidth="200.0">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" layoutY="36.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/map.png" />
                           </image>
                        </ImageView>
                     </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
            </children>
        </VBox>
    </center>
</BorderPane>
