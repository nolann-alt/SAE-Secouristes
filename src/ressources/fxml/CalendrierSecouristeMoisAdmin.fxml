<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<StackPane prefHeight="852.0" prefWidth="393.0" styleClass="rounded-app" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CalendrierSecouristeMoisAdminController">
    <clip>
        <Rectangle arcHeight="50" arcWidth="50" height="852" width="393" />
    </clip>

    <!-- CONTENEUR PRINCIPAL -->
    <BorderPane fx:id="mainBorderPane" prefHeight="852.0" prefWidth="393.0">

        <!-- TOP BARRE -->
        <top>
            <VBox prefWidth="393.0" BorderPane.alignment="CENTER">
                <children>

                    <!-- BARRE D'INFOS -->
                    <HBox alignment="CENTER" prefHeight="44.0" prefWidth="393.0" spacing="3.0" styleClass="top-container-tableau">
                        <children>
                            <Label styleClass="app-time-tableau" text="00:00" />
                            <Region HBox.hgrow="ALWAYS" />
                            <ImageView fitHeight="17" fitWidth="17" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../img/signal_noir.png" />
                                </image>
                            </ImageView>
                            <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../img/wifi_noir.png" />
                                </image>
                            </ImageView>
                            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../img/batterie_noir.png" />
                                </image>
                            </ImageView>
                        </children>
                    </HBox>
                </children>
            </VBox>
        </top>

        <!-- CONTENU CENTRAL SCROLLABLE -->
        <center>
            <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background-radius: 25; -fx-border-radius: 25;" vbarPolicy="NEVER" BorderPane.alignment="CENTER">
                <content>
                    <VBox alignment="CENTER" spacing="10.0" styleClass="event-list">
                        <!-- Boutons mois -->
                        <ScrollPane fx:id="scrollPaneMois" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="NEVER" style="-fx-background-color: transparent;">
                            <content>
                                <HBox fx:id="moisSelector" alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: rgba(171, 171, 171, 0.21); -fx-background-radius: 20;">
                                    <padding>
                                        <Insets top="10" bottom="10" left="20" right="20" />
                                    </padding>
                                </HBox>
                            </content>
                        </ScrollPane>

                        <!-- Titre : Calendrier de Marin -->
                        <VBox alignment="CENTER">
                            <Label fx:id="titreCalendrier" text="Calendrier de Marin" style="-fx-text-fill: #E60023; -fx-font-size: 20;" />
                            <Label fx:id="labelMoisActuel" text="Avril" style="-fx-font-size: 18; -fx-text-fill: black;" />
                        </VBox>

                        <!-- Grille du mois -->
                        <VBox style="-fx-background-color: #F6F6F6; -fx-background-radius: 30;" spacing="10" maxWidth="360">
                            <padding>
                                <Insets top="20" left="20" right="20" bottom="20" />
                            </padding>
                            <HBox alignment="CENTER" spacing="35">
                                <children>
                                    <Label text="L" style="-fx-font-weight: bold;" />
                                    <Label text="M" style="-fx-font-weight: bold;" />
                                    <Label text="M" style="-fx-font-weight: bold;" />
                                    <Label text="J" style="-fx-font-weight: bold;" />
                                    <Label text="V" style="-fx-font-weight: bold;" />
                                    <Label text="S" style="-fx-font-weight: bold;" />
                                    <Label text="D" style="-fx-font-weight: bold;" />
                                </children>
                            </HBox>
                            <GridPane fx:id="gridMois" hgap="29" vgap="10" />
                        </VBox>

                        <!-- Bouton Créer un DPS -->
                        <Button text="Créer un DPS" styleClass="create-button" prefWidth="300" prefHeight="45" />
                    </VBox>

                </content>
            </ScrollPane>
        </center>
    </BorderPane>

    <!-- NAVIGATION BAR FLOTANTE -->
    <HBox fx:id="navBar" alignment="CENTER" maxHeight="70" maxWidth="346.0" spacing="40.0" style="-fx-background-color: #FFEDED; -fx-background-radius: 50; -fx-border-radius: 50; -fx-padding: 10; " StackPane.alignment="BOTTOM_CENTER">
        <children>
            <VBox alignment="CENTER" onMouseClicked="#handleAccueil" styleClass="clickable-zone">
                <ImageView fitHeight="36.0" fitWidth="45.0">
                    <image>
                        <Image url="@../img/Accueil_noir.png" />
                    </image>
                </ImageView>
            </VBox>
            <VBox alignment="CENTER">
                <ImageView fitHeight="36.0" fitWidth="45.0">
                    <image>
                        <Image url="@../img/Planning_rouge.png" />
                    </image>
                </ImageView>
            </VBox>
            <VBox alignment="CENTER" onMouseClicked="#handleAlertesAdmin" styleClass="clickable-zone">
                <ImageView fitHeight="36.0" fitWidth="45.0">
                    <image>
                        <Image url="@../img/Alertes_noir.png" />
                    </image>
                </ImageView>
            </VBox>
            <VBox alignment="CENTER" layoutX="213.0" layoutY="20.0" onMouseClicked="#handleEffectif" styleClass="clickable-zone">
                <children>
                    <ImageView fitHeight="36.0" fitWidth="45.0">
                        <image>
                            <Image url="@../img/effectif.png" />
                        </image>
                    </ImageView>
                </children>
            </VBox>
        </children>
        <StackPane.margin>
            <Insets bottom="40.0" />
        </StackPane.margin>
    </HBox>
</StackPane>
